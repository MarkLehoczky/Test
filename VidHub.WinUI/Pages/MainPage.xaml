<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VidHub.WinUI.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidHub.WinUI.Pages"
    xmlns:control="using:VidHub.WinUI.UserControls"
    xmlns:modalcontrol="using:VidHub.WinUI.UserControls.Modals"
    xmlns:viewmodel="using:VidHub.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <control:TitleBarUserControl Grid.Row="0" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <control:SidePanelUserControl Grid.Column="0" />
            <control:VideoCollectionUserControl Grid.Column="1" />
        </Grid>

        <modalcontrol:FeatureModalUserControl Grid.Row="0" Grid.RowSpan="2" />
        <modalcontrol:LicenseModalUserControl Grid.Row="0" Grid.RowSpan="2" />

    </Grid>

</Page>
