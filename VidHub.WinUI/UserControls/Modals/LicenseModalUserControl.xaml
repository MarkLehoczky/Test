<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="VidHub.WinUI.UserControls.Modals.LicenseModalUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidHub.WinUI.UserControls.Modals"
    xmlns:viewmodel="using:VidHub.ViewModels.Modals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodel:LicenseModalViewModel />
    </UserControl.DataContext>

    <Grid Visibility="{Binding IsModalVisible}" Background="#40000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MaxWidth="960" MaxHeight="540" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="©️ LICENSE ©️" FontSize="24" FontWeight="Bold" Margin="8 0 8 0" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" />

                <Button Command="{Binding CloseModalCommand}" Width="30" Height="30" BorderThickness="0" CornerRadius="15" Margin="0" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1">
                    <FontIcon Glyph="&#xe8bb;" FontFamily="Segoe Fluent Icons" FontSize="10" />
                    <Button.Resources>
                        <Color x:Key="ButtonBackgroundPointerOver">Red</Color>
                        <Color x:Key="ButtonBackgroundPressed">Salmon</Color>
                    </Button.Resources>
                </Button>

                <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <StackPanel>

                        <StackPanel>
                            <TextBlock Text="{Binding ApplicationLicense.Name}" FontSize="20" FontWeight="Bold" Margin="0 16 0 0" HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding ApplicationLicense.Type}" FontSize="16" FontWeight="Bold" Margin="0 12 0 0" HorizontalAlignment="Left" />
                            <TextBlock Text="{Binding ApplicationLicense.Copyright}" Margin="0 6 0 12" />
                            <ItemsControl ItemsSource="{Binding ApplicationLicense.Content}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="WrapWholeWords" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Spacing="10" Margin="8 12 8 8">
                            <ItemsControl ItemsSource="{Binding ExternalLicenses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0 16 0 0" HorizontalAlignment="Center" />
                                            <TextBlock Text="{Binding Type}" FontSize="16" FontWeight="Bold" Margin="0 12 0 0" HorizontalAlignment="Left" />
                                            <TextBlock Text="{Binding Copyright}" Margin="0 6 0 12" />
                                            <ItemsControl ItemsSource="{Binding Content}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" TextWrapping="WrapWholeWords" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</UserControl>
