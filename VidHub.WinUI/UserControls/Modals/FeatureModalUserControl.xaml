<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="VidHub.WinUI.UserControls.Modals.FeatureModalUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VidHub.WinUI.UserControls.Modals"
    xmlns:viewmodel="using:VidHub.ViewModels.Modals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodel:FeatureModalViewModel />
    </UserControl.DataContext>

    <Grid Visibility="{Binding IsModalVisible}" Background="#40000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Border Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MaxWidth="960" MaxHeight="540" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="â‡ï¸ WHAT'S CHANGED â‡ï¸" FontSize="24" FontWeight="Bold" Margin="8 0 8 0" HorizontalAlignment="Left" Grid.Column="0" />
                <Button Command="{Binding CloseModalCommand}" Width="30" Height="30" BorderThickness="0" CornerRadius="15" Margin="0" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1">
                    <FontIcon Glyph="&#xe8bb;" FontFamily="Segoe Fluent Icons" FontSize="10" />
                    <Button.Resources>
                        <Color x:Key="ButtonBackgroundPointerOver">Red</Color>
                        <Color x:Key="ButtonBackgroundPressed">Salmon</Color>
                    </Button.Resources>
                </Button>

                <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Spacing="25" Margin="8">
                        <ItemsControl ItemsSource="{Binding VersionChanges}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Version}" FontSize="20" FontWeight="Bold" Margin="0 16 0 0" HorizontalAlignment="Center" />
                                        <TextBlock Text="âœ¨ FEATUES" Visibility="{Binding HasFeatures}" FontSize="16" FontWeight="Bold" Margin="0 12 0 6" HorizontalAlignment="Left" />
                                        <ItemsControl ItemsSource="{Binding Features}" />
                                        <TextBlock Text="ðŸž BUG FIXES" Visibility="{Binding HasBugfixes}" FontSize="16" FontWeight="Bold" Margin="0 12 0 6" HorizontalAlignment="Left" />
                                        <ItemsControl ItemsSource="{Binding Bugfixes}" />
                                        <TextBlock Text="ðŸ› ï¸ INTERNAL CHANGES" Visibility="{Binding HasInternalChanges}" FontSize="16" FontWeight="Bold" Margin="0 12 0 6" HorizontalAlignment="Left" />
                                        <ItemsControl ItemsSource="{Binding InternalChanges}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

            </Grid>
        </Border>
    </Grid>
</UserControl>
